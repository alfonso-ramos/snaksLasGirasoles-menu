---
import phoneLogo from '../assets/icons/phone.svg' 
---
<div class="bg-zafre text-white font-semibold text-center max-w-[200px]  py-3 px-6 rounded-xl flex gap-3">
    <img class="size-5" src={phoneLogo.src} alt="">
    <button id="copyButton">6692639645</button>
</div>

<script>
    const copyBtn = document.querySelector('#copyButton')
    
    copyBtn.addEventListener('click', () => {
        if(navigator.clipboard) {
            navigator.clipboard.writeText('6692639645').then(() => {
                alert('Se ha copiado')
            })
        } else {
            console.log('Navegador no compatible')
        }
    })
</script>